{% extends 'base.html.twig' %}
{% block body %}

<h1>Liste des parties</h1>

<a href="{{ path('catane_nouvelle_partie') }}">Nouvelle partie</a>
<a href="{{ path('catane_liste_joueurs') }}">Liste des joueurs</a>


<table>
	<thead>
		<tr>
			<th>id</th>
			<th>nom</th>
			<th>plateau</th>
			<th>joueur 1</th>
			<th>joueur 2</th>
		</tr>
	</thead>
	<tbody>
	{% for partie in parties %}
		<tr>
			<td>{{ partie.id }}</td>
			<td><a href="{{ path('catane_partie',{ partie: partie.id }) }}">{{ partie.name }}</a></td>
			<td>{{ partie.plateau.id }}</td>
			<td>{{ partie.firstPlayer.username }}</td>
			<td>{{ partie.secondPlayer.username }}</td>
		</tr>
	{% endfor %}
	</tbody>
</table>


{% endblock %}

